    "scripts": {
        "clean": "rimraf dist && make-dir dist",
        "uglify-js": "uglifyjs src/js/jquery-2.1.0.js src/js/*.js -c -m -o dist/index.min.js",
        "uglify-css": "uglifycss src/css/*.css --output dist/style.min.css",
        "copy-public": "cpx \"public/*\" dist && cpx \"public/**/\" dist",
        "build": "yarn clean && yarn uglify-js && yarn uglify-css && yarn copy-public"
    },
    "devDependencies": {
        "cpx": "^1.5.0",
        "make-dir-cli": "^3.0.0",
        "rimraf": "^3.0.2",
        "uglify-js": "^3.16.1",
        "uglifycss": "^0.0.29"
